div(class="container-fluid text-center")    
    div(class="row content")
        div(class="col-sm-1 text-left")
        div(class="col-sm-5 text-left") 
            div(class="card-img-top") 
                form(#personaform="ngForm")
                    input( 
                        type="hidden", 
                        name="_id", 
                        class="form-control", 
                        id="_id",
                        #_id="ngModel", 
                        [(ngModel)]="personService.selectperson._id"
                    )
                    div(class="form-group")
                        label(id='title') Edit person
                    div(class="form-group")
                        div
                            input( 
                                type="text",
                                name="username", 
                                id="username",
                                #username="ngModel", 
                                [(ngModel)]="personService.selectperson.username", 
                                placeholder="Username"
                            )
                        div    
                            input( 
                                type="text", 
                                id="first_name", 
                                name="first_name", 
                                #first_name="ngModel", 
                                [(ngModel)]="personService.selectperson.first_name", 
                                placeholder="First name"
                            )   
                            input(
                                type="text", 
                                id="second_name", 
                                name="second_name", 
                                #second_name="ngModel", 
                                [(ngModel)]="personService.selectperson.second_name",  
                                placeholder="Second name"
                            )
                        div
                            input(
                                type="text", 
                                id="first_lastname", 
                                name="first_lastname", 
                                #first_lastname="ngModel", 
                                [(ngModel)]="personService.selectperson.first_lastname",  
                                placeholder="First lastname"
                            )
                            input(
                                type="text", 
                                id="second_lastname", 
                                name="second_lastname", 
                                #second_lastname="ngModel", 
                                [(ngModel)]="personService.selectperson.second_lastname",  
                                placeholder="Second lastname"
                            )
                        div
                            input(
                                type="email", 
                                id="email", 
                                name="email", 
                                #email="ngModel", 
                                [(ngModel)]="personService.selectperson.email",  
                                placeholder="Email"
                            )
                            input(
                                type="text", 
                                id="country", 
                                name="country", 
                                #country="ngModel", 
                                [(ngModel)]="personService.selectperson.country",  
                                placeholder="Country"
                            )
                        div(*ngIf="pswstatus")
                            input(
                                type="password", 
                                id="password", 
                                name="password", 
                                #password="ngModel", 
                                [(ngModel)]="personService.selectperson.password",  
                                placeholder="Password"
                            )
                            input(
                                type="password", 
                                id="repassword", 
                                name="repassword",   
                                placeholder="Repit the password"
                            )
                        div
                            input(
                                type="number", 
                                id="celphone", 
                                name="celphone", 
                                #celphone="ngModel", 
                                [(ngModel)]="personService.selectperson.celphone",  
                                placeholder="Celphone"
                            )
                            input(
                                type="number", 
                                id="Rate_by_hour", 
                                name="Rate_by_hour", 
                                #Rate_by_hour="ngModel", 
                                [(ngModel)]="personService.selectperson.Rate_by_hour",  
                                placeholder="Rate by hour"
                            )
                        div    
                            input(
                                type="number", 
                                id="Rate_by_mount", 
                                name="Rate_by_mount", 
                                #Rate_by_mount="ngModel", 
                                [(ngModel)]="personService.selectperson.Rate_by_mount",  
                                placeholder="Rate by mount"
                            )
                            input(
                                type="number", 
                                id="idRol", 
                                name="idRol", 
                                #idRol="ngModel", 
                                [(ngModel)]="personService.selectperson.idRol",  
                                placeholder="idRol"
                            )
                        div    
                            input(
                                type="text", 
                                id="github", 
                                name="github", 
                                #github="ngModel", 
                                [(ngModel)]="personService.selectperson.github",  
                                placeholder="Github"
                            )
                            input(
                                type="text", 
                                id="linkedin", 
                                name="linkedin", 
                                #linkedin="ngModel", 
                                [(ngModel)]="personService.selectperson.linkedin",  
                                placeholder="Linkedin"
                            )
                        input(
                            type="text", 
                            class="form-control",
                            id="bitbucket", 
                            name="bitbucket", 
                            #bitbucket="ngModel", 
                            [(ngModel)]="personService.selectperson.bitbucket",  
                            placeholder="Bitbucket"
                        )        
                    div(class="form-group")
                        div(id="btndiv")
                            button(
                                class="btn btn-outline-primary btn-lg", 
                                "(click)"="resetForm(personaform)") Clean   
                            button(class="btn btn-outline-primary btn-lg",
                                "(click)"="addperson(personaform)") Save    
        div(class="col-sm-4 sidenav" )
            label(id='title') Persons
            div(id="getPersonView")
                div(
                    class="card", 
                    *ngFor="let person of personService.person"
                )
                    div(class="card-header")
                        p(class="card-text usertitle") {{person.first_name}} {{person.second_name}} {{person.first_lastname}} {{person.second_lastname}}.                   
                    div(class="card-body")
                        p(class="card-text")
                            label Email: 
                                p {{person.email}}
                            label Rate by hour: 
                                p {{person.Rate_by_hour}}. 
                            label Rate by mount: 
                                p {{person.Rate_by_mount}}.   
                            label Celphone: 
                                p {{person.celphone}}.  
                            label Country: 
                                p {{person.country}}.
                            label Github:   
                                p {{person.github}}. 
                            label Linkedin: 
                                p {{person.linkedin}}. 
                            label Bitbucket:    
                                p {{person.bitbucket}}. 
                        a("(click)"="editperson(person)")
                            i(class="glyphicon glyphicon-pencil")
                        a((click)="deleteperson(person._id, personaform)")
                            i(class="glyphicon glyphicon-trash")    
        div(class="col-sm-2 sidenav")
            label(id='title') History
            div(id="notifiView")
                div(
                    class="card dropdown-toggle notifi", 
                    style="width:200px", 
                    *ngFor="let not of notificacion"
                )
                    div(class="card-body bg-primary")
                        h3(class="card-title") {{not.titulo}}
                        p(class="card-text") {{not.mensaje}}
                        p(class="card-text") {{not.hora}}
