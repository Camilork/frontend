div(
    class="p-3 mb-2 bg-primary text-white", 
    id="menu") Sing up
div(class="container-fluid text-center")    
    div(class="row content")
        div(class="col-sm-7 text-left") 
            div(class="card-img-top") 
                form(
                    #personaform="ngForm", 
                    (ngSubmit)="addperson(personaform)")
                    input( 
                        type="hidden", 
                        name="_id", 
                        class="form-control", 
                        id="_id",
                        #_id="ngModel", 
                        [(ngModel)]="personService.selectperson._id"
                    )
                    div(class="form-group")
                        label(for="email") Name
                        input( 
                            type="text",
                            name="name", 
                            class="form-control", 
                            id="name",
                            #name="ngModel", 
                            [(ngModel)]="personService.selectperson.name", 
                            placeholder="put the name"
                        )
                    div(class="form-group")
                        label(for="pwd") Latsname
                        input( 
                            type="text", 
                            class="form-control", 
                            id="lastname", 
                            name="lastname", 
                            #lastname="ngModel", 
                            [(ngModel)]="personService.selectperson.lastname", 
                            placeholder="put the lastname"
                        )
                    div(class="form-group")
                        label(for="pwd") Email
                        input(
                            type="text", 
                            class="form-control",
                            id="pwd", 
                            name="email", 
                            #email="ngModel", 
                            [(ngModel)]="personService.selectperson.email",  
                            placeholder="put the email"
                        )
                    div(class="form-group", *ngIf="pswstatus")
                        label(for="pwd") Password
                        input(
                            type="password", 
                            class="form-control",
                            id="pwd", 
                            name="password", 
                            #password="ngModel", 
                            [(ngModel)]="personService.selectperson.password",  
                            placeholder="Put the password"
                        )    
                    div(class="form-group")
                        button(class="btn btn-outline-primary btn-lg") Save
                button(
                    class="btn right", 
                    class="btn btn-outline-primary btn-lg", 
                    "(click)"="resetForm(personaform)") Clean   
        div(class="col-sm-3 sidenav" id="nsas")
            div(
                class="card", 
                style="width:300px", 
                *ngFor="let person of personService.person"
            )
                div(class="card-body")
                    h3(class="card-title") {{person.name}} {{person.lastname}}
                    p(class="card-text") {{person.email}}
                    a("(click)"="editperson(person)")
                        i(class="glyphicon glyphicon-pencil")
                    a((click)="deleteperson(person._id, personaform)")
                        i(class="glyphicon glyphicon-trash")
        div(class="col-sm-2 sidenav" id="nsas")
            div(
                class="card", 
                style="width:200px", 
                *ngFor="let not of notificacion"
            )
                div(class="card-body bg-primary mb-3")
                    h3(class="card-title") {{not.titulo}}
                    p(class="card-text") {{not.mensaje}}
                    p(class="card-text") {{not.hora}}
